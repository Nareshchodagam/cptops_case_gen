- create a local remote_transfer directory
Exec: mkdir -p ~/releaserunner/remote_transfer

- get the remote scripts:
Exec: cp -R /opt/cpt/remote/* ~/releaserunner/remote_transfer/

- edns
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/ssa/edns_role_internal_validation.py ~/releaserunner/remote_transfer/edns_role_internal_validation.py

- inst
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/ssa/inst_role_external_validation.py ~/inst_role_external_validation.py
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/ssa/inst_role_internal_validation.py ~/releaserunner/remote_transfer/inst_role_internal_validation.py

- ns
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/ssa/ns_role_external_validation.py ~/ns_role_external_validation.py

- smarts
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/automation/scripts/opseng/computedeploy/patching/bin/manage_smarts.py ~/releaserunner/remote_transfer/manage_smarts.py
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/automation/scripts/opseng/computedeploy/oneoffs/verify_if-eth.sh ~/releaserunner/remote_transfer/verify_if-eth.sh
Exec: svn export svn://vc-v_DATACENTER/subversion/tools/automation/scripts/opseng/computedeploy/oneoffs/ifdown-eth ~/releaserunner/remote_transfer/ifdown-eth